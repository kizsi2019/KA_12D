        <TextBlock x:Name="ÁtlagsebességKmPh" HorizontalAlignment="Left" Margin="167,138,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="35" Width="146"/>
        <TextBlock x:Name="ÁtlagsebességMPs" HorizontalAlignment="Left" Margin="167,191,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="35" Width="146"/>
        <Button Content="Számol" HorizontalAlignment="Left" Margin="230,60,0,0" VerticalAlignment="Top" Height="157" Width="164" Grid.Column="2"/>


    </Grid>
</Window>
